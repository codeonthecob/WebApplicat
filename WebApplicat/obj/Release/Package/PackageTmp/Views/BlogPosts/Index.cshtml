@foreach (var item in Model)
{
    <section class="post">
        <h1>@Html.DisplayFor(modelItem => item.MediaURL)</h1><br/>
        <h3><a href="@Url.Action("Details",new {id = item.Id})">@Html.DisplayFor(modelItem => item.Title)</a></h3>
        <div class="info-panel clearfix">
            <span class="pull-left"><time datetime=""><i class="icon-calendar "></i>@Html.DisplayFor(modelItem => item.Created)</time></span>
            <span class="pull-right"><i class="icon-user"></i> By Alan Cravey </span>
        </div>
        <p>
            @Html.DisplayFor(modelItem => item.Body)
        </p>
        <a class="btn pull-right" href="#">Read more</a>
        
            @Html.ActionLink("Edit", "Edit", "Comments") |
             |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
    </section>
}


